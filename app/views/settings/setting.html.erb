<%= render "shared/flash" %>
<%= render "shared/header_common" %>

<div class="setting-wrapper">

  <h2><i class="fas fa-cog"></i> 設定</h2>

  <div class="setting-links">
    <div>
      <% if current_user.user_type != "管理者" %>
        <div>
          <%= link_to new_commute_path do %>
            <span><i class="fas fa-route"></i> 通勤経路設定</span>
          <% end %>
        </div>
      <% end %>
      <div>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <span><i class="fas fa-sign-out-alt"></i> ログアウト</span>
        <% end %>
      </div>
    </div>

    <% if current_user.user_type == "管理者" %>
      <div>
        <div>
          <%= link_to users_path do %>
            <span><i class="fas fa-users"></i> ユーザー一覧</span>
          <% end %>
        </div>
        <div>
          <%= link_to new_user_registration_path do %>
            <span><i class="fas fa-user-plus"></i> ユーザー新規登録</span>
          <% end %>
        </div>
      </div>
      <div>
        <div>
          <%= link_to year_months_path do %>
            <span><i class="far fa-calendar"></i> カレンダー一覧</span>
          <% end %>
        </div>
        <div>
          <%= link_to new_year_month_path do %>
            <span><i class="far fa-calendar-plus"></i> カレンダー新規作成</span>
          <% end %>
        </div>
      </div>
    <% end %>

  </div>

</div>